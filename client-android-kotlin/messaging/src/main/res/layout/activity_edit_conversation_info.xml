<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:filterTouchesWhenObscured="true"
    android:orientation="vertical">

    <com.voximplant.demos.messaging.utils.ProfileInfoView
        android:id="@+id/editProfileInfoView"
        android:layout_width="409dp"
        android:layout_height="200dp"
        android:filterTouchesWhenObscured="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/leave_conversation_button"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:text="leave"
        android:textColor="@color/text"
        app:backgroundTint="@color/containerLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/colorAccent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/permissions_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/containerLight"
        android:filterTouchesWhenObscured="true"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Permissions"
        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="@+id/participants_button"
        app:layout_constraintStart_toStartOf="@+id/participants_button"
        app:layout_constraintTop_toBottomOf="@+id/admins_button"
        app:rippleColor="@color/colorAccent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/admins_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:backgroundTint="@color/containerLight"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Admins"
        android:textColor="@color/text"
        app:layout_constraintBottom_toTopOf="@+id/leave_conversation_button"
        app:layout_constraintEnd_toEndOf="@+id/participants_button"
        app:layout_constraintStart_toStartOf="@+id/participants_button"
        app:layout_constraintTop_toBottomOf="@+id/editProfileInfoView"
        app:rippleColor="@color/colorAccent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/participants_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/containerLight"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Participants"
        android:textColor="@color/text"
        app:layout_constraintBottom_toTopOf="@+id/admins_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/colorAccent" />
</androidx.constraintlayout.widget.ConstraintLayout>